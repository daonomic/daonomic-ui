  "scripts": {
    "start": "start-storybook -p 9000",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "format": "prettier --write \"./source/**/*.{js,css,json,md}\"",
    "test": "jest --verbose --passWithNoTests",
    "lint": "eslint source",
    "qa": "npm t && npm run lint",
    "ensure-git-credentials":
      "git config --local user.name \"Dev\" && git config --local user.email \"dev@0v1se.com\"",
    "postinstall": "npm run ensure-git-credentials",
    "precommit": "npm run ensure-git-credentials && lint-staged && npm run qa",
    "prepublishOnly": "npm run qa",
    "postpublish": "npm run deploy-storybook"
  },
  "lint-staged": {
    "*.{js,json,md,css}": ["prettier --write", "git add"]
  },
  "repository": {
